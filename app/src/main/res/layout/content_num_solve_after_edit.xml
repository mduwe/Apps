<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mathupyourlife.odesolver.numSolveAfterEdit"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/functionInfo" />



    <TextView
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/initialValueInfo"
        android:layout_weight="0.15"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/solverInfo"
        android:layout_weight="0.50" />

    <TextView
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/leftBoundInfo"
        android:layout_weight="0.12" />

    <TextView
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/rightBoundInfo"
        android:layout_weight="0.12" />

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/numerOfStepsInfo"
        android:layout_weight="0.12" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text"
        android:id="@+id/stepSizeInfo"
        android:layout_weight="0.12" />



    <android.support.design.widget.FloatingActionButton android:id="@+id/editInputsButton"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_edit"
        android:clickable="true" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/startNumSolvingButton"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_media_play"
        android:clickable="true"
        />

    <!--
    <android.support.design.widget.FloatingActionButton android:id="@+id/makeNewNumSolve"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end" android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_add"
        android:clickable="true" />
-->

</LinearLayout>
